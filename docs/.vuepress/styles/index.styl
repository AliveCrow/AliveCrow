// 添加额外样式
root {
}

html.light {
  --box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.075) !important;
  --box-shadow-hover: 0px 0px 30px rgba(0, 0, 0, 0.075) !important;
}

html, body, a.sidebar-link {
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, Liberation Mono, Courier New, monospace !important;
  background-color: hsl(216.92 100% 97.451%, 0 0% 100% / 1) !important
}

// 左侧侧边栏
.sidebar-links
  a.sidebar-link
    background-color #fff !important

  a.sidebar-link.active
    background-color var(--default-color-8) !important

// 选中背景
*::selection
  color #fff
  background-color $accentColor

// 主页
.hero
  height 0 !important

// 修改头像
.personal-img
  object-fit cover

// 链接个人信息中的链接居中
.social-links
  justify-content center


.category-item,
.tags > span
  transition all .15s !important

// 文章列表样式
.abstract-item:hover
  .title
    a
      color $accentColor !important

    &:after
      visibility visible !important
      transform scaleX(1) !important


